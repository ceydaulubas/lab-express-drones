<h2>Available drones</h2>

{{#each allTheDronesFromDB}}
<div>
  <p> <b>Name: </b> {{this.name}}</p>
  <p> <b>Propellers: </b> {{this.propellers}}</p>
  <p> <b>Speed: </b> {{this.speed}}</p>

  <a href="/drones/{{_id}}">See details</a>
  <a href="/drones/{{_id}}/edit">Edit</a>
  <form action="/drones/{{_id}}/delete" method="POST">
    <button>Delete</button>
</div>
{{/each}}
